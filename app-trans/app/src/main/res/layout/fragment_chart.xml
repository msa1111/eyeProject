<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_g"
    android:orientation="vertical" >

  <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.98"
        android:gravity="center_vertical"
        android:orientation="vertical" >
        
      <RadioButton
            android:id="@+id/acp_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ACP-out(A)"
            android:textColor="@color/black"
            android:textSize="40dp" />
        
        <RadioButton
            android:id="@+id/acp_B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ACP-out(B)"
            android:textColor="@color/black"
            android:textSize="40dp" />
        
        <RadioButton
            android:id="@+id/acp_C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ACP-out(C)"
            android:textColor="@color/gray"
            android:textSize="40dp" />
        
        <RadioButton
            android:id="@+id/acp_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ACP-out(F)"
            android:textColor="@color/black"
            android:textSize="40dp" />
        
        <RadioButton
            android:id="@+id/acp_G"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ACP-out(G)"
            android:textColor="@color/gray"
            android:textSize="40dp" />
        
        <RadioButton
            android:id="@+id/acp_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ACP-in  (A)"
            android:textColor="@color/black"
            android:textSize="40dp" />

        <RadioButton
            android:id="@+id/acp_100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ACP-in  (B)"
            android:textColor="@color/black"
            android:textSize="40dp" />
        
        <RadioButton
            android:id="@+id/acp_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ACP-lcd(A)"
            android:textColor="@color/gray"
            android:textSize="40dp" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.08"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btt"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="save" />
    </LinearLayout>

</LinearLayout>